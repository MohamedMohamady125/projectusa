# Application Settings
APP_NAME=SwimUSA Recruit API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development
API_V1_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/swimusa_recruit
DATABASE_SYNC_URL=postgresql://username:password@localhost:5432/swimusa_recruit

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@swimusarecruit.com
MAIL_FROM_NAME=SwimUSA Recruit
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=True
MAIL_SSL=False
MAIL_USE_CREDENTIALS=True

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=swimusa-recruit-documents
S3_BUCKET_URL=https://swimusa-recruit-documents.s3.amazonaws.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,mp4,mov

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# NCAA Time Standards (optional - can be loaded from database)
NCAA_STANDARDS_URL=https://example.com/ncaa-standards.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Admin User (for initial setup)
ADMIN_EMAIL=admin@swimusarecruit.com
ADMIN_PASSWORD=change-this-password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
